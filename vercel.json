{
    "version": 2,
    "builds": [
        {
            "src": "*.{html,js,css}",
            "use": "@vercel/static"
        },
        {
            "src": "assets/**",
            "use": "@vercel/static"
        },
        {
            "src": "./api/server.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "./api/server",
            "dest": "./api/server.js"
        },
        {
            "src": "/(.*)",
            "dest": "/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/index.html"
        }
    ]
}